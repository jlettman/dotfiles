# ğŸ’¬ Check if ClamAV is installed
command -v clamav >/dev/null 2>&1 || { 
    echo >&2 "This system is missing ClamAV. Exiting."
    exit 1
}

# ğŸ’¬ Scan all of /home
clamscan --recursive=yes --infected /home

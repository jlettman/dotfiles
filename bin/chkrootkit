# ğŸ’¬ Check if rkhunter is installed
command -v rkhunter >/dev/null 2>&1 || { 
    echo >&2 "This system is missing rkhunter. Exiting."
    exit 1
}

# ğŸ’¬ Update Rootkit Hunter (rkhunter) definitions
sudo rkhunter --update
sudo rkhunter --propupd

# ğŸ’¬ Check for rookits
sudo rkhunter --check
